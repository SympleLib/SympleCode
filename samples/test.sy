// link 'link.sy';

@naked decl int MessageBoxA(byte*, char*, char*, int);

class MessageBox {
	char* title, message,
	int type,
	
	int(MessageBox*)* showFn;
	
	int show() {
		ret MessageBoxA(null, message, title, type);
	}
	
	void show(int nTimes) {
		for (int i = 0; i < nTimes; i++)
			this.show();
	}
}

void run() {
	// loadDoTheThing('this is the string to print out');
