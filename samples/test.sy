using byte* as Module;

decl Module LoadLibraryA(char* name);
decl byte* GetProcAddress(Module, char* name);
decl void puts(char*);

public void run() {
	Module glfw = LoadLibraryA('glfw');
	if (glfw == null) {
		puts('glfw not loaded');
		ret;
	}
	
	bool() glfwInit = GetProcAddress(glfw, 'glfwInit');
	if (glfwInit()~~) {
		puts('glfw not init');
		ret;
	}
}