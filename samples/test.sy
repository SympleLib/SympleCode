	// doTheThing();
	
	MessageBox msg = MessageBox { 'class test', 'it works?', 1 };
	msg.show(3);
	msg.message = 'does it?';
	msg.show();
	msg.showFn = msg.show;
	msg.message = 'hell ya it does!';
	msg.showFn();
}